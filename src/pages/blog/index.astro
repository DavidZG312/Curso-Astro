---
import Layout from "../../components/Layout.astro";

const posts = await Astro.glob("./posts/*.md");
console.log(posts.map((post) => post.url));
---

<Layout
    pageTitle="Blog de desarrollo"
    pageDescription="Practicando astro con markdown"
>
    <h1>Blog</h1>
    {posts.map((post) => {
        return <a class="link" href={post.url}>{post.frontmatter.title}</a>
    })}
</Layout>

<style>
    .link {
        background: wheat;
        color: black;
        text-decoration: none;
        display: block;
        margin-bottom: 4px;
    }
</style>